{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/app/css/styles.css') }}">
{% endblock %}
{% block body %}
    <div class="create">
        <h3>Create a new record in database</h3>
        <h4>Enter the values:</h4>
        <form class="form-inline" action="{{ path('addinfo') }}" method="post">
            <div class="form-group">
                <label for="name1">Name:</label>
                <input type="text" class="form-control" name="name1" id="name1">
            </div>
            <div class="form-group">
                <label for="surname">Surname:</label>
                <input type="text" class="form-control" name="surname" id="surname">
            </div>
            <div class="form-group">
                <label for="team">Team:</label>
                <input type="text" class="form-control" name="team" id="team">
            </div>
            <div class="form-group">
                <label for="age">Age</label>
                <input type="number" min="0" class="form-control" name="age" id="age">
            </div>
            <button type="submit" class="btn btn-default">Add new record</button>
        </form>
    </div>
    <div class="update">
        <h3>Update a record in database</h3>
        <h4>Enter the values:</h4>
        <form class="form-inline" action="{{ path('update') }}" method="post">
            <div class="form-group">
                <label for="player_id">ID:</label>
                <input type="text" min="1" class="form-control" name="player_id" id="player_id">
            </div>
            <div class="form-group">
                <label for="name_u">Name:</label>
                <input type="text" class="form-control" name="name_u" id="name_u">
            </div>
            <div class="form-group">
                <label for="surname_u">Surname:</label>
                <input type="text" class="form-control" name="surname_u" id="surname_u">
            </div>
            <div class="form-group">
                <label for="team_u">Team:</label>
                <input type="text" class="form-control" name="team_u" id="team_u">
            </div>
            <div class="form-group">
                <label for="age_u">Age</label>
                <input type="number" min="0" class="form-control" name="age_u" id="age_u">
            </div>
            <button type="submit" class="btn btn-default">Update</button>
        </form>
    </div>
    <div class="delete">
        <h3>Delete a record in database</h3>
        <h4>Enter an ID to delete</h4>
        <form class="form-inline" action="{{ path('delete') }}" method="post">
            <div class="form-group">
                <input type="number" min="1" class="form-control" name="player_id_d" id="player_id_d">
            </div>
            <button type="submit" class="btn btn-default">Delete</button>
        </form>
    </div>
{% endblock%}